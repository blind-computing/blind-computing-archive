server {
        root /var/www/blind-computing-beta;
        index home.php index.php index.html index.htm index.nginx-debian.html;

        server_name beta.blindcomputing.org;

        location / {
                try_files $uri $uri/ =404;
        }
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }

    location ~ /\.git {
        deny all;
    }

    include redirects.conf;

    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/beta.blindcomputing.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/beta.blindcomputing.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = beta.blindcomputing.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80;
        listen [::]:80;

        server_name beta.blindcomputing.org;
    return 404; # managed by Certbot


}
